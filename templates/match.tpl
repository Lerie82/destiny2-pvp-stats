<div class="match-container">
	<div class="match-header">
		<div class="playlist">
			<label for="match-playlist">Playlist</label>
			<span name="match-playlist">{#playlist}</span>
		</div>

		<div class="map">
			<label for="match-map">Map</label>
			<span name="match-map">{#map}</span>
		</div>

		<div class="result">
		</div>
	</div>

	<div class="match-body">
		<div class="stat-section">
			<div class="section-stat">
				<img src="https://via.placeholder.com/45" />
				<label for="stat-text">Score</label>
				<span name="stat-text">{#score}</span>
			</div>
                        <div class="section-stat">
                                <img src="https://via.placeholder.com/45" />
                                <label for="stat-text">Kills</label>
                                <span name="stat-text">{#kills}</span>
                        </div>
                        <div class="section-stat">
                                <img src="https://via.placeholder.com/45" />
                                <label for="stat-text">Deaths</label>
                                <span name="stat-text">{#deaths}</span>
                        </div>
		</div>
                <div class="stat-section">
                        <div class="section-stat">
                                <img src="https://via.placeholder.com/45" />
                                <label for="stat-text">Assists</label>
                                <span name="stat-text">{#assists}</span>
                        </div>
                        <div class="section-stat">
                                <img src="https://via.placeholder.com/45" />
                                <label for="stat-text">K/D</label>
                                <span name="stat-text">{#kd}</span>
                        </div>
                        <div class="section-stat">
                                <img src="https://via.placeholder.com/45" />
                                <label for="stat-text">K/D/A</label>
                                <span name="stat-text">{#kda}</span>
                        </div>
                </div>
                <div class="stat-section">
                        <div class="section-stat">
                                <img src="https://via.placeholder.com/45" />
                                <label for="stat-text">Glory</label>
                                <span name="stat-text">{#glory}</span>
                        </div>
                        <div class="section-stat">
                                <img src="https://via.placeholder.com/45" />
                                <label for="stat-text">Wins</label>
                                <span name="stat-text">{#wins}</span>
                        </div>
                        <div class="section-stat">
                                <img src="https://via.placeholder.com/45" />
                                <label for="stat-text">Losses</label>
                                <span name="stat-text">{#losses}</span>
                        </div>
                </div>
	</div>

	<div class="match-footer">
		<div class="duration">{#duration}</div>
		<div class="social">
			<img src="https://via.placeholder.com/18" />
                </div>
	</div>
</div>
